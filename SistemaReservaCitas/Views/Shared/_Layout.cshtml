<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Reservas</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

</head>
<!-- <link rel="stylesheet" href="~/SistemaReservaCitas.styles.css" asp-append-version="true" /> -->
<!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
<!-- <link rel="stylesheet" href="~/css/site.output.css" /> -->
<!-- <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> -->
<body>
    <header>
        <nav class="border-b border-gray-700 bg-gray-900">
            <div class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between p-4">
                <a href="@Url.Action("Index", "Citas")" class="flex items-center space-x-3">
                    <span class="self-center whitespace-nowrap text-2xl font-semibold text-white">Sistema de Reservas</span>
                </a>
                <button class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-gray-400 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-600 md:hidden" id="menuButton" aria-controls="navbar-dropdown" aria-expanded="false">
                    <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
                    </svg>
                </button>
                <div class="hidden w-full md:block md:w-auto" id="navbar-dropdown">
                    <ul class="mt-4 flex flex-col rounded-lg border border-gray-700 bg-gray-800 p-4 font-medium md:p-0 md:space-x-8 md:flex-row md:mt-0 md:border-0 md:bg-gray-900">
                        <li>
                            <a class="block rounded px-3 py-2 text-white
@(ViewContext.RouteData.Values["action"] as string == "Index" && ViewContext.RouteData.Values["controller"] as string == "Citas" ? "bg-blue-700 md:bg-transparent md:text-blue-500 md:p-0" : "hover:bg-gray-700 hover:text-white md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-blue-500")"
                               href="@Url.Action("Index", "Citas")">Home</a>
                        </li>
                        <li>
                            <a class="block rounded px-3 py-2 text-white
@(ViewContext.RouteData.Values["action"] as string == "Consulta" && ViewContext.RouteData.Values["controller"] as string == "Citas" ? "bg-blue-700 md:bg-transparent md:text-blue-500 md:p-0" : "hover:bg-gray-700 hover:text-white md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-blue-500")"
                               href="@Url.Action("Consulta", "Citas")">Consulta</a>
                        </li>
                        <li>
                            <a class="block rounded px-3 py-2 text-white
@(ViewContext.RouteData.Values["action"] as string == "Calendario" && ViewContext.RouteData.Values["controller"] as string == "Citas" ? "bg-blue-700 md:bg-transparent md:text-blue-500 md:p-0" : "hover:bg-gray-700 hover:text-white md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-blue-500")"
                               href="@Url.Action("Calendario", "Citas")">Calendario</a>
                        </li>
                        <li>
                            <a class="block rounded px-3 py-2 text-white
@(ViewContext.RouteData.Values["action"] as string == "Crear" && ViewContext.RouteData.Values["controller"] as string == "Citas" ? "bg-blue-700 md:bg-transparent md:text-blue-500 md:p-0" : "hover:bg-gray-700 hover:text-white md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-blue-500")"
                               href="@Url.Action("Crear", "Citas")">Reservar Cita</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div >
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-700 bg-gray-900 py-4 text-center text-gray-400">
        <div class="container mx-auto">
            &copy; 2024 - SistemaReservaCitas - <a asp-area="" asp-controller="Citas" asp-action="Index">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
